<resources>

    <!-- Light theme (default) -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="themeName">light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="LightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Alternative dark theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="themeName">dark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorIconDark</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Miscellaneous styles -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_common_text">
        <item name="android:text">@string/str_name</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="style_home_bottom_image_view">
        <item name="android:layout_width">@dimen/dp_32</item>
        <item name="android:layout_height">@dimen/dp_32</item>
        <item name="android:background">@drawable/ic_device_24dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="style_home_bottom_text_view" parent="style_common_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="style_home_bottom_text_view2" parent="style_common_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/str_connect_device_count</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/darker_gray</item>
        <item name="android:padding">4dp</item>
    </style>




</resources>
